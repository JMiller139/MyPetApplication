<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jona1.mypet.UserProfileActivity"
    tools:showIn="@layout/app_bar_user_profile">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addPetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:onClick="addPet"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/plus"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="16dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/userCV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="374dp">

                    <ImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/profile"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/firstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/thumbnail"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/firstName"
                        android:textColor="#222"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/lastName"
                        android:textColor="#222"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_below="@+id/thumbnail"
                        android:layout_toRightOf="@+id/firstName"
                        android:layout_toEndOf="@+id/firstName" />

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/profileUseName"
                        android:textColor="#222"
                        android:textSize="14dp"
                        android:layout_below="@+id/firstName"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/lastName"
                        android:layout_alignBottom="@+id/lastName"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="23dp"
                        android:layout_marginRight="23dp"
                        android:text="@string/address"
                        android:textColor="#222" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/userName"
                        android:layout_marginLeft="13dp"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/email"
                        android:textColor="#222" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/petCV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:layout_below="@id/userCV" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/petImage"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/daisy"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/petName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/petImage"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/petName"
                        android:textColor="#222"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/petAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/petAge"
                        android:textColor="#222"
                        android:layout_toRightOf="@+id/petImage"
                        android:layout_below="@id/petName"
                        />

                    <TextView
                        android:id="@+id/species"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/petImage"
                        android:layout_below="@id/petAge"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/species"
                        android:textColor="#222"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/breed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/breed"
                        android:textColor="#222"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:layout_toRightOf="@+id/petImage"
                        android:layout_below="@id/species"/>

                    <TextView
                        android:id="@+id/markings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/petName"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/markings"
                        android:textColor="#222" />

                    <TextView
                        android:id="@+id/rabies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/petAge"
                        android:layout_below="@id/markings"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/rabies"
                        android:textColor="#222" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/petCV1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:layout_below="@id/petCV" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/petImage1"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/doggy"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/petName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/petImage1"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Name: Doggy"
                        android:textColor="#222"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/petAge1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/petName1"
                        android:layout_toRightOf="@+id/petImage1"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Age: 1 Year"
                        android:textColor="#222" />

                    <TextView
                        android:id="@+id/species1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/petImage1"
                        android:layout_below="@id/petAge1"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/species"
                        android:textColor="#222"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/breed1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/species1"
                        android:layout_toRightOf="@+id/petImage1"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Breed: Labrador Retriever"
                        android:textColor="#222" />

                    <TextView
                        android:id="@+id/markings1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/petName1"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Markings: None"
                        android:textColor="#222" />

                    <TextView
                        android:id="@+id/rabies1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/petAge1"
                        android:layout_below="@id/markings1"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/rabies"
                        android:textColor="#222" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>



        </RelativeLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jona1.mypet.RegisterAccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="594dp">

            <TextView
                android:id="@+id/createAnAccountTitle"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="@string/createAnAccountTitle"
                android:textColor="@color/wallet_bright_foreground_holo_light"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/createAnAccountTitle"
                android:gravity="center_vertical"
                android:text="@string/userNameTextView"
                android:textColor="@color/wallet_bright_foreground_holo_light"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/usernameEditText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/createAnAccountTitle"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/userNameTextView"
                android:ems="10"
                android:inputType="textPersonName" />


            <TextView
                android:id="@+id/firstNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/userNameTextView"
                android:gravity="center_vertical"
                android:text="@string/firstNameTextView"
                android:textColor="@color/wallet_bright_foreground_holo_light"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/fnameEditText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/usernameEditText"
                android:layout_toRightOf="@id/firstNameTextView"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lastNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/firstNameTextView"
                android:gravity="center_vertical"
                android:text="@string/lastNameTextView"
                android:textColor="@color/wallet_bright_foreground_holo_light"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/lnameEditText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/fnameEditText"
                android:layout_toRightOf="@id/lastNameTextView"

                android:ems="10"
                android:inputType="textPersonName"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/lastNameTextView"
                android:gravity="center_vertical"
                android:text="@string/addressTextView"
                android:textColor="@color/wallet_bright_foreground_holo_light"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/addressEditText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/lnameEditText"
                android:layout_toRightOf="@+id/addressTextView"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/addressTextView"
                android:gravity="center_vertical"
                android:text="@string/emailTextView"
                android:textColor="@color/wallet_bright_foreground_holo_light"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/emailTextView"
                android:layout_below="@+id/addressEditText"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/confirmEmailTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/emailTextView"
                android:gravity="center_vertical"
                android:text="@string/confirmEmailTextView"
                android:textColor="@color/wallet_bright_foreground_holo_light"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/confirmEmailEditText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/emailEditText"
                android:layout_toRightOf="@id/confirmEmailTextView"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/passwordTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/confirmEmailTextView"
                android:gravity="center_vertical"
                android:text="@string/passwordTextView"
                android:textColor="@color/wallet_bright_foreground_holo_light"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/confirmEmailEditText"
                android:layout_toRightOf="@id/passwordTextView"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/confirmPasswordTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/passwordTextView"
                android:gravity="center_vertical"
                android:text="@string/confirmPasswordTextView"
                android:textColor="@color/wallet_bright_foreground_holo_light"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/confirmPasswordEditText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/passwordEditText"
                android:layout_toRightOf="@+id/confirmPasswordTextView"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/createAccountButton"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/confirmPasswordEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:onClick="onCreateAccountClick"
                android:text="@string/createAccountButtonText" />

        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
